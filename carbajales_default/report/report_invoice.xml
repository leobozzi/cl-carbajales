<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Factura Ventas 1,6,11,19,52,201,206,211-->
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <xpath expr="//table[@name='invoice_line_table']//thead//tr[1]//th[3]" position="after">
                <th t-if="o.l10n_latam_document_type_id_code in ['1','6','11','19','52','201','206','211']"
                    name="th_bonus">
                    <span>Bonif.</span>
                </th>
            </xpath>
            <xpath expr="//table[@name='invoice_line_table']//tbody//tr[1]//td[3]" position="after">
                <td class="text-right" t-if="o.l10n_latam_document_type_id_code in ['1','6','11','19','52','201','206','211']">
                    <span t-field="o.currency_id.symbol" />
                    <span t-field="line.bonus" />
                </td>
            </xpath>
        </template>
    </data>
</odoo>