<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Account Move Bonus TREE view-->
    <record id="account_move_line_bonus_tree_view" model="ir.ui.view">
        <field name="name">account_move_line_bonus_tree_view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//form//sheet//notebook//page//field[@name='invoice_line_ids']//tree//field[@name='discount']"
                position="before">
                <field name="bonus" optional="show" widget="monetary" />
            </xpath>
        </field>
    </record>
</odoo>